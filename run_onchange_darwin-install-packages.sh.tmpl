{{ if eq .chezmoi.os "darwin" -}}
#!/bin/bash

brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range .packages.darwin.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.casks -}}
cask {{ . | quote }}
{{ end -}}
{{ range $appName, $appId := .packages.darwin.mas -}}
mas {{ $appName | quote }}, id: {{ $appId }}
{{ end -}}
EOF
{{ end -}}
