export EDITOR="emacsclient"
export LANG=en_US.UTF-8
export TZ="Asia/Shanghai"

# Python
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"

# Android
export ANDROID_HOME=$HOME/Library/Android/sdk
export ANDROID_SDK_ROOT=$ANDROID_HOME
export PATH="$ANDROID_HOME/build-tools/33.0.0/:$PATH"

# Homebrew
export HOMEBREW_BREW_GIT_REMOTE="https://mirrors.ustc.edu.cn/brew.git"
export HOMEBREW_CORE_GIT_REMOTE="https://mirrors.ustc.edu.cn/homebrew-core.git"
export HOMEBREW_BOTTLE_DOMAIN="https://mirrors.ustc.edu.cn/homebrew-bottles"
export HOMEBREW_API_DOMAIN="https://mirrors.ustc.edu.cn/homebrew-bottles/api"
export PATH="/usr/local/sbin:$PATH"
export PATH="/usr/local/opt/curl/bin:$PATH"
export PATH="/usr/local/opt/gnupg@2.2/bin:$PATH"
export XDG_CONFIG_HOME="$HOME/.config"

# Java
export PATH="/usr/local/opt/openjdk/bin:$PATH"
export CPPFLAGS="-I/usr/local/opt/openjdk/include"
export JAVA_HOME=$(/usr/libexec/java_home -v 17)

# HASS
export HASS_SERVER=http://homeassistant.local:8123

# Doom
export PATH="$HOME/.config/emacs/bin:$PATH"

# Beancount
export BEANCOUNT_FILE="$HOME/org/beancount/ledger.beancount"
export FAVA_PORT=8888

# ZeroTier
export PATH="/Library/Application\ Support/ZeroTier/One:$PATH"
