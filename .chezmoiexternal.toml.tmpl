[".config/proxy"]
    type = "git-repo"
    url = "https://github.com/chuxubank/proxy-config"
    refreshPeriod = "4h"

["org"]
    type = "git-repo"
    url = "https://github.com/chuxubank/org"
    refreshPeriod = "4h"

["org-roam"]
    type = "git-repo"
    url = "https://github.com/chuxubank/org-roam"
    refreshPeriod = "4h"

[".emacs.d"]
    type = "git-repo"
    url = "https://github.com/chuxubank/cat-emacs"
    refreshPeriod = "4h"

[".plum"]
    type = "git-repo"
    url = "https://github.com/rime/plum"
    refreshPeriod = "168h"

{{- if eq .chezmoi.os "darwin" }}
[".rime/dist"]
    type = "archive"
    url = "{{ (first (gitHubLatestRelease "rime/librime").Assets).BrowserDownloadURL }}"
    exact = true
    stripComponents = 1
{{- end }}

[".password-store"]
    type = "git-repo"
    url = "https://github.com/chuxubank/pass"
    refreshPeriod = "4h"
